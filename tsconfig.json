{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist-server",
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true
    },
    "filesGlob": [
        "server/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}